@page "/fetchdata"

@using Course_Display.Data
@inject DBService dbService

<h1>Fetch Data</h1>


@if (currentCourse == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Credit Hours</th>
                <th>Prereqs</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@currentCourse.CourseName</td>
                <td>@currentCourse.CreditHours</td>
                <td>@currentCourse.Prereqs</td>
            </tr>
        </tbody>
    </table>
}

<br />
<br />

<input type="text" @bind-value="courseName" />

<br />
<br />

<button @onclick="() => getThing()">Grab Course Data</button>

@code {
    public Course currentCourse;
    public string courseName = "CSCI300";

    protected override async Task OnInitializedAsync()
    {
    }

    public async void getThing()
    {
        currentCourse = await dbService.GetCourseAsync(courseName);
        //dbService.Testing("CSCI300");
    }
}
